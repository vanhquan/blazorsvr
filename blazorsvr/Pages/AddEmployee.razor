@page "/AddEmployee"
@using blazorsvr.Data
@inject EmployeeService employeeService
@inject NavigationManager NavigationManager

<h2>Add Student</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input form="Name" class="form-control" @bind="@obj.StudentName" />
            </div>
            <div class="form-group">
                <label for="Gender" class="control-label">Gender</label>
                <select @bind="@obj.Gender" class="form-control">
                    <option value="">-Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Designation" class="control-label">Date of Birth</label>
                <input form="Designation" class="form-control" @bind="@obj.DOB" type="datetime" />
            </div>
            <div class="form-group">
                <label for="Designation" class="control-label">Batch Time</label>
                <input form="Designation" class="form-control" @bind="@obj.BatchTime" />
            </div>
            <div class="form-group">
                <label for="Designation" class="control-label">Phone</label>
                <input form="Designation" class="form-control" @bind="@obj.Phone" />
            </div>
            <div class="form-group">
                <label for="City" class="control-label">Email</label>
                <input form="City" class="form-control" @bind="@obj.Email" />
            </div>
            <div class="form-group">
                <label for="City" class="control-label">Website</label>
                <input form="City" class="form-control" @bind="@obj.URL" />
            </div>
            <div class="form-group">
                <label for="City" class="control-label">Password</label>
                <input form="City" class="form-control" @bind="@obj.Password" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code { Employee obj = new Employee();
            protected async void CreateEmployee()
            {
                await employeeService.InsertEmployeeAsync(obj);
                NavigationManager.NavigateTo("Employees");
            }
            void Cancel()
            {
                NavigationManager.NavigateTo("Employees");
            } }