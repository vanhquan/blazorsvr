@page "/Student"
@using blazorsvr.Data
@inject StudentService studentService

<NavLink class="nav-link" href="Add">
    <span class="oi oi-plus" aria-hidden="true">Add New Student</span>

</NavLink>

<h1>Student List</h1>
@if (StdObj is null)
{
<p><em>Loading... !</em></p> }
else
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Student Name</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Batch Time</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Website</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in StdObj)
        {
        <tr>
            <td>@std.Id</td>
            <td>@std.StudentName</td>
            <td>@std.Gender</td>
            <td>@std.DOB</td>
            <td>@std.BatchTime</td>
            <td>@std.Phone</td>
            <td>@std.Email</td>
            <td>@std.URL</td>
            <td>
                <a class="nav-link" href="Edit/@std.Id">
                    <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                </a>
                <a class="nav-link" href="Delete/@std.Id">
                    <span class="oi oi-trash" aria-hidden="true">Delete</span>
                </a>
            </td>
        </tr>
           }
    </tbody>
</table>}


@code { List<blazorsvr.Data.Student> StdObj;
    protected override async Task OnInitializedAsync()
    {
        StdObj = await Task.Run(() => studentService.GetAllStudentsAsync());
    } }